{
  "name": "peter.sh",
  "version": "2.0.0",
  "description": "This was once the personal weblog of Peter Beverloo, but that hasn't really been the case for about a decade. Today, its main feature is the Chromium command line flag overview, which is periodically generated from Chromium's source code.",
  "scripts": {
    "build": "next build",
    "build-prod": "docker build --build-arg PORT=4001 -t peter-sh .",
    "serve": "next dev --turbo",
    "serve-tests": "cross-env APP_HOST_OVERRIDE=tests.peter.sh next dev --turbo",
    "lint": "next lint"
  },
  "homepage": "https://github.com/beverloo/peter.sh#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beverloo/peter.sh.git"
  },
  "license": "MIT",
  "author": "Peter Beverloo",
  "dependencies": {
    "modern-normalize": "^3.0.1",
    "next": "^16.0.7",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "cross-env": "^10.1.0",
    "eslint": "9.39.1",
    "eslint-config-next": "16.0.7",
    "eslint-plugin-unused-imports": "^4.3.0",
    "typescript": "5.9.3"
  }
}
